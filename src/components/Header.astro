---
import { Image } from 'astro:assets';
import logoImg from '../assets/logo.svg';

const navItems = [
  { label: 'Home', href: '#' },
  { label: 'Professionals', href: '#' },
  { label: 'Short therapy / FAQ', href: '#' },
  { label: 'Contact info', href: '#' },
];
---

<header class="bg-white shadow-md">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex font-serif font-bold items-center">
      <Image 
        src={logoImg} 
        alt="Company Logo Image" 
        class="rounded-lg"
        width={128}
        height={128}
      />
    </a>
    <nav class="hidden md:flex space-x-6">
      {navItems.map(item => (
        <a href={item.href} class="text-gray-700 hover:text-primary-500 transition duration-150 ease-in-out">
          {item.label}
        </a>
      ))}
    </nav>
    <a href="/#" class="bg-primary-500 text-white px-4 py-2 rounded hover:bg-primary-600 transition duration-150 ease-in-out">
      Book now
    </a>
  </div>
</header>
